<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creation.observation">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="705dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/tv"
            android:layout_width="341dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/aldrich"
            android:gravity="top"
            android:hint="taper votre observation"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:typeface="serif"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView138"
                android:layout_width="191dp"
                android:layout_height="27dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:text="SIGNER ICI "
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="54dp"
                android:layout_height="57dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="13dp"
                android:background="@android:drawable/ic_menu_delete"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <com.kyanogen.signatureview.SignatureView
            android:id="@+id/signature_view"
            android:layout_width="344dp"
            android:layout_height="188dp"
            android:layout_marginLeft="30dp"
            android:focusableInTouchMode="true"
            android:foreground="#99F4FF81"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            app:enableSignature="true"
            app:penColor="#000000"
            app:penSize="5dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/prefirst7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Precedent"
        android:textColor="#5e79a1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943" />

    <TextView
        android:id="@+id/suvitAs7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Envoyer"
        android:textColor="#5e79a1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943" />

</androidx.constraintlayout.widget.ConstraintLayout>