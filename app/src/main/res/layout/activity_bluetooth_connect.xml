<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagat_blue103"
    tools:context=".bluetoothConnect">

    <Button
        android:id="@+id/recevoirB"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_button"
        android:text="CODE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <EditText
        android:id="@+id/rechP"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:background="@drawable/input_style"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="veuillez saisir la clÃ© de l'autre appareil"
        app:layout_constraintBottom_toTopOf="@+id/rechP"
        app:layout_constraintEnd_toEndOf="@+id/rechP"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/rechP" />

    <Button
        android:id="@+id/envoyerB"
        android:layout_width="189dp"
        android:layout_height="57dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_button"
        android:shadowColor="#000000"
        android:text="envoyer"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/rechP"
        app:layout_constraintStart_toStartOf="@+id/rechP"
        app:layout_constraintTop_toBottomOf="@+id/rechP" />

    <ProgressBar
        android:id="@+id/LoadConnectBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />
</androidx.constraintlayout.widget.ConstraintLayout>